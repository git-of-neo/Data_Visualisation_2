{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Bump chart",
    "width": "container",
    "data": {
      "url": "data/top_10_rank.csv"
    },
    "encoding": {
      "x": {
        "field": "Year", 
        "type": "nominal"
      },
      "y": {
          "field": "Rank",
          "type": "quantitative",
          "sort":"descending",
          "scale":{"domainMin":1}
        },
        "color":{
          "field": "Country name", 
          "type": "ordinal", 
          "scale":{"range":["#4c78a8", "#9ecae9", "#fcbfd2" , "#b279a2" , "#54a24b" , "#d67195", "#d6a5c9", "#9e765f", "#439894", "#83bcb6", "#79706e", "#d8b5a5"]},
          "legend":null
        },
        "tooltip":[
          {"field" : "Country name"},
          {"field" : "Year"}
        ]
    },
    "layer": [
      {
        "params": [{
          "name": "hover",
          "value": [{"Country name": "Finland"}],
          "select": {
            "type": "point",
            "fields": ["Country name"],
            "on": "mouseover"
          }
        }],
        "mark":{
          "type": "line", 
          "point": {"size": 80}, 
          "strokeWidth":5,
          "strokeOpacity":0.7
        },
        "encoding": {
          "color":{
            "condition":{
              "param": "hover",
              "field": "Country name"
            },
            "value":"lightgrey"
          },
          "opacity":{"value":{"expr": "hover['Country name']==null && datum['Country name']!='Finland' ? 0.3 : 1"}}
        }        
      },
      {
        "mark":{
          "type": "text",
          "dx":-15,
          "align":"center"
        },
        "encoding": {
          "text":{"field":"Rank"},
          "opacity":{"value":{"expr": "datum['Year'] == 2015 ? 1 : 0"}},
          "color":{"value":"black"}
        }
      },
      {
        "mark":{
          "type": "text",
          "align":"center",
          "dy":18
        },
        "encoding": {
          "text":{"field":"Year"},
          "opacity":{"value":{"expr": "datum['Rank'] == 10 ? 1 : 0"}},
          "color":{"value":"black"}
        }
      },
      {
        "data":{"url": "data/top_10_rank.csv"},
        "transform": [
          {"filter":"datum['Year']==2021"}
        ],
        "mark":{
          "type": "image",
          "width":20,
          "height":20
        },
        "encoding": {
          "url":{"field":"Image", "type": "nominal"},
          "opacity":{"value":1}
        }
      }
    ],
    "config": {
      "view": {"stroke":null},
      "axis": {"disable": true}
    }
  }
  