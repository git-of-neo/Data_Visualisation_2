{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width":"container",
  "height":220,
  "title":{
    "text":"Lowest ranked countries in 2021",
    "fontSize":15
  },
  "data": {
    "url":"data/world-happiness-report-2021.csv"
  },
  "transform": [
    {"joinaggregate": [{"field": "Ladder score", "as": "average score", "op": "average"}]},
    {"calculate": "datum['Ladder score'] - datum['average score']", "as": "score_deviation"}
  ],
  "params": [{
    "name": "N",
    "value":10,
    "bind":{
      "input": "range",
      "min": 2,
      "max": 10,
      "step": 1,
      "name": "Number of countries : "
    }
  }],
  "layer": [
    {
      "transform": [
        {
          "window": 
          [{"op":"rank", "as": "rank"}], 
          "sort": [{"field": "Ladder score","order":"descending"}]
        },
        {"filter":"datum.rank >= (150-N)"}
      ],
      "encoding": {
        "y":{"field":"rank"},
        "x":{
          "aggregate":"sum",
          "field":"Ladder score"
        },
        "color":{
          "legend":null,
          "value":{"expr": "datum['Country name'] == 'Afghanistan' ? '#b21218' : 'lightgrey'"}
        },
        "tooltip":[
          {"field":"Ladder score"},
          {"field":"Country name"},
          {"field":"score_deviation", "title":"Deviation from global average", "format":".2f"}
        ]
      },
      "layer": [
        {
          "mark":"bar"
        },
        {
          "mark":{
            "type": "text",
            "align":"left",
            "dx":3
          },
          "encoding": {
            "text":{
              "field":"Ladder score", 
              "format":".2f"
            },
            "color":{"value":{"expr": "datum['Country name'] == 'Afghanistan' ? '#b21218' : 'grey'"}}
          }
        },
        {
          "mark":{
            "type": "text",
            "align":"left",
            "dx":10
          },
          "encoding": {
            "x":{"datum":0},
            "text":{"field":"Country name"},
            "color":{"value":{"expr": "datum['Country name'] == 'Afghanistan' ? 'white' : 'black'"}}
          }
        }
      ]
    }
  ],
  "config": {
    "view": {"stroke":null},
    "axis": {"disable": true},
    "font": "Open Sans"
  }
}